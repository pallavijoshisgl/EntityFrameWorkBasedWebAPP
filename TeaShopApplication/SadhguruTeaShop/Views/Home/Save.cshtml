@model SadhguruTeaShop.Models.Component

<h2>Save</h2>


@using (Html.BeginForm("save", "home", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.ComponentId > 0)
    {
        @Html.HiddenFor(a => a.ComponentId)
    }


    <div class="form-group">
        <label>Name</label>

        @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Name)



    </div>
    <div class="form-group">
        <label>Description</label>

        @Html.TextBoxFor(a => a.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Description)

    </div>
    <div class="form-group">
        <label>Price</label>
        @Html.TextBoxFor(a => a.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Price)
    </div>

    <div>
        <input type="submit" value="save" />
    </div>
}

