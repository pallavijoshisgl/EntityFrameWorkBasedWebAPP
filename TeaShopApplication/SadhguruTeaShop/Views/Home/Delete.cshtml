@model SadhguruTeaShop.Models.Component


<h2>Delete Component</h2>
@using (Html.BeginForm("delete", "home", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.ComponentId)
    <div class="form-group">
        <label>Name</label>
        <p>@Model.Name</p>
    </div>
    <div class="form-group">
        <label>Description</label>
        <p>@Model.Description</p>
    </div>
    <div class="form-group">
        <label>Price</label>
        <p>@Model.Price</p>
    </div>


    <div>
        <input type="submit" value="delete" />
    </div>
}


